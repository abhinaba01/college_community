<!DOCTYPE html>
<html>
<head>
    <title>My Inbox</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <span class="navbar-brand">My Inbox</span>
            <a href="/dashboard" class="btn btn-light btn-sm">Back to Dashboard</a>
        </div>
    </nav>
    <div class="container">
        <div class="list-group">
            <% if(conversations.length === 0) { %>
                <div class="alert alert-info">No messages yet.</div>
            <% } %>
            
            <% conversations.forEach(function(c){ %>
                <a href="/chat?room=<%= c.room %>&withUser=<%= c.otherPerson %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Chat with <strong><%= c.otherPerson %></strong></h5>
                        <small class="text-muted">Regarding Listing ID: <%= c.listingId %></small>
                    </div>
                    <span class="badge bg-primary rounded-pill">Open Chat</span>
                </a>
            <% }); %>
        </div>
    </div>
</body>
</html>