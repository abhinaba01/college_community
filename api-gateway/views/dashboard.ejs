<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard | CollegeConnect</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body { 
            background-color: #f0f2f5;
            font-family: 'Jost', sans-serif; 
        }
        
        /* Navbar */
        .navbar { 
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1rem 0; 
        }
        .navbar-brand { font-weight: 600; letter-spacing: -1px; color: #2d3436; font-size: 1.5rem; }
        
        /* Sidebar Styling */
        .sidebar-card {
            background: white;
            border: 1px solid #e1e4e8;
            border-radius: 0px;
            position: sticky;
            top: 100px;
        }
        .nav-link-custom {
            color: #4b5563;
            padding: 15px 20px;
            border-left: 3px solid transparent;
            border-bottom: 1px solid #f3f4f6;
            transition: all 0.2s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            text-decoration: none;
        }
        .nav-link-custom:hover {
            background-color: #f9fafb;
            color: #764ba2;
        }
        .nav-link-custom.active {
            background-color: #f0fdf4; /* Light tint */
            color: #764ba2;
            border-left-color: #764ba2;
            font-weight: 600;
        }

        /* Form & Cards */
        .card-sharp {
            background: white;
            border: 1px solid #e1e4e8;
            border-radius: 0px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
            margin-bottom: 2rem;
        }
        
        .form-control, .form-select {
            border-radius: 0px;
            border: 1px solid #dcdfe6;
            padding: 12px;
            background-color: #f8f9fa;
        }
        .form-control:focus {
            background-color: #fff;
            border-color: #764ba2;
            box-shadow: none;
        }

        /* Listing Cards */
        .listing-card {
            background: white;
            border: 1px solid rgba(0,0,0,0.08);
            border-radius: 0px;
            margin-bottom: 1.5rem;
            transition: all 0.3s;
        }
        .listing-card:hover { 
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            border-color: #764ba2;
        }
        .listing-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        /* Buttons */
        .btn-rect {
            border-radius: 0px;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
            padding: 12px 20px;
            font-weight: 600;
            border: none;
        }
        .btn-primary-glossy {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }
        .btn-primary-glossy:hover {
            opacity: 0.95;
            box-shadow: 0 4px 15px rgba(118, 75, 162, 0.4);
        }
    </style>
</head>
<body>

<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container-fluid main-container" style="max-width: 1200px;">
        <a class="navbar-brand" href="#"><i class="bi bi-grid-3x3-gap-fill me-2"></i>COLLEGECONNECT</a>
        <div class="d-flex align-items-center gap-3">
             <span class="nav-user fw-bold"><%= user %></span>
             <a href="/logout" class="btn btn-outline-dark btn-sm rounded-0">LOGOUT</a>
        </div>
    </div>
</nav>

<div class="container mt-5" style="max-width: 1200px;">
    <div class="row g-4">
        
        <div class="col-md-3">
            <div class="sidebar-card d-flex flex-column">
                <div class="p-3 bg-light border-bottom text-muted small fw-bold text-uppercase">Menu</div>
                
                <a class="nav-link-custom active" id="nav-marketplace" onclick="switchView('Marketplace')">
                    <i class="bi bi-shop fs-5"></i> Marketplace
                </a>
                
                <a class="nav-link-custom" id="nav-services" onclick="switchView('Services')">
                    <i class="bi bi-person-workspace fs-5"></i> Services
                </a>
                
                <a class="nav-link-custom" id="nav-booking" onclick="switchView('Booking')">
                    <i class="bi bi-calendar-check fs-5"></i> Bookings
                </a>
            </div>
        </div>

        <div class="col-md-9">
            
            <div id="form-Marketplace" class="form-section">
                <div class="card-sharp p-4">
                    <h5 class="fw-bold mb-4 text-uppercase text-primary"><i class="bi bi-tag-fill me-2"></i>Sell an Item</h5>
                    <form action="/post-listing" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="category" value="Marketplace">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="title" class="form-control" placeholder="Item Name (e.g. Scientific Calculator)" required>
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="price" class="form-control" placeholder="Price ($)" required>
                            </div>
                            <div class="col-12">
                                <textarea name="description" class="form-control" rows="2" placeholder="Condition, age, and details..."></textarea>
                            </div>
                            <div class="col-12">
                                <label class="small text-muted mb-1">Upload Photo</label>
                                <input type="file" name="image" class="form-control" accept="image/*">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-rect btn-primary-glossy w-100">Post Item for Sale</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div id="form-Services" class="form-section" style="display: none;">
                <div class="card-sharp p-4">
                    <h5 class="fw-bold mb-4 text-uppercase text-success"><i class="bi bi-tools me-2"></i>Offer a Service</h5>
                    <form action="/post-listing" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="category" value="Services">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="title" class="form-control" placeholder="Service Title (e.g. Math Tutor, Cleaning)" required>
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="price" class="form-control" placeholder="Rate ($)" required>
                            </div>
                            <div class="col-12">
                                <textarea name="description" class="form-control" rows="2" placeholder="Describe your experience and availability..."></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-rect btn-primary-glossy w-100" style="background: linear-gradient(45deg, #11998e, #38ef7d);">Publish Service</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div id="form-Booking" class="form-section" style="display: none;">
                <div class="card-sharp p-4">
                    <h5 class="fw-bold mb-4 text-uppercase text-danger"><i class="bi bi-building me-2"></i>Book Hall / Room</h5>
                    <form action="/post-listing" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="category" value="Booking">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="title" class="form-control" placeholder="Facility Name (e.g. Conference Hall A)" required>
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="price" class="form-control" placeholder="Booking Fee ($)" required>
                            </div>
                            <div class="col-12">
                                <textarea name="description" class="form-control" rows="2" placeholder="Capacity, Rules, and Available Dates..."></textarea>
                            </div>
                            <div class="col-12">
                                <label class="small text-muted mb-1">Facility Image</label>
                                <input type="file" name="image" class="form-control" accept="image/*">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-rect btn-primary-glossy w-100" style="background: linear-gradient(45deg, #FF416C, #FF4B2B);">Create Booking Listing</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <h6 class="text-muted fw-bold mb-3">Recent Listings</h6>
            
         

            <div id="feed-container">
                <% listings.reverse().forEach(function(item){ %>
                    <div class="listing-card" data-category="<%= item.category %>">
                        <div class="row g-0">
                            <% if(item.image) { %>
                                <div class="col-md-4">
                                    <img src="<%= item.image %>" class="listing-img h-100" alt="Item">
                                </div>
                            <% } %>
                            <div class="<%= item.image ? 'col-md-8' : 'col-12' %>">
                                <div class="card-body p-4 d-flex flex-column h-100 justify-content-center">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="badge bg-light text-dark border rounded-0"><%= item.category %></span>
                                        <span class="fw-bold fs-5 text-primary">$<%= item.price %></span>
                                    </div>
                                    <h4 class="card-title fw-bold"><%= item.title %></h4>
                                    <p class="text-muted mb-3"><%= item.description %></p>
                                    
                                    <div class="mt-auto d-flex justify-content-between align-items-center pt-3 border-top">
                                        <small class="text-muted">By <strong><%= item.postedBy %></strong></small>
                                        
                                        <% if (user !== item.postedBy) { %>
                                            <% 
                                                let p1 = user < item.postedBy ? user : item.postedBy;
                                                let p2 = user < item.postedBy ? item.postedBy : user;
                                                let roomID = item._id + "_" + p1 + "_" + p2;
                                            %>
                                            <a href="/chat?room=<%= roomID %>&withUser=<%= item.postedBy %>" class="btn btn-sm btn-outline-dark rounded-0 px-4">
                                                CHAT
                                            </a>
                                        <% } else { %>
                                            <form action="/delete-listing/<%= item._id %>" method="POST" onsubmit="return confirm('Delete this listing permanently?');" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-0 px-4">
                                                    <i class="bi bi-trash-fill"></i> DELETE
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <div id="empty-state" class="text-center py-5" style="display: none;">
                <h3 class="text-muted opacity-25">No listings in this category</h3>
            </div>

        </div>
    </div>
</div>

<script>
    function switchView(category) {
        // 1. Update Sidebar Active State
        document.querySelectorAll('.nav-link-custom').forEach(el => el.classList.remove('active'));
        document.getElementById('nav-' + category.toLowerCase()).classList.add('active');

        // 2. Switch Forms
        document.querySelectorAll('.form-section').forEach(el => el.style.display = 'none');
        document.getElementById('form-' + category).style.display = 'block';

        // 3. Filter Feed
        const items = document.querySelectorAll('.listing-card');
        let hasItems = false;

        items.forEach(item => {
            const itemCat = item.getAttribute('data-category');
            // Show item if it matches category. 
            // Note: Use 'includes' or strict match. 
            // If category is Marketplace, we might want to show legacy categories too, but let's be strict for now based on your prompt.
            if (itemCat === category) {
                item.style.display = 'block';
                hasItems = true;
            } else {
                item.style.display = 'none';
            }
        });

        // Toggle Empty State
        document.getElementById('empty-state').style.display = hasItems ? 'none' : 'block';
    }

    // Initialize with Marketplace on load
    window.onload = function() {
        switchView('Marketplace');
    };
</script>

</body>
</html>