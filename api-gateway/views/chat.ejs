<!DOCTYPE html>
<html lang="en">
<head>
    <title>Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        body { background-color: #e5e7eb; height: 100vh; display: flex; flex-direction: column; font-family: 'Inter', sans-serif; }
        
        .chat-header {
            background: white; padding: 1rem 2rem; border-bottom: 1px solid #e5e7eb;
            display: flex; align-items: center; justify-content: space-between;
        }
        
        .chat-container {
            flex: 1; max-width: 900px; margin: 20px auto; width: 100%;
            background: #fff; border-radius: 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            display: flex; flex-direction: column; overflow: hidden;
            height: 80vh;
        }
        
        .messages-area {
            flex: 1; overflow-y: auto; padding: 20px; background-color: #f0f2f5;
            display: flex; flex-direction: column; gap: 10px;
        }
        
        .message-bubble {
            max-width: 70%; padding: 10px 15px; border-radius: 12px;
            font-size: 0.95rem; line-height: 1.5; position: relative;
            box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }
        
        .msg-me {
            background-color: #dcf8c6; align-self: flex-end;
            border-bottom-right-radius: 2px;
        }
        
        .msg-them {
            background-color: #ffffff; align-self: flex-start;
            border-bottom-left-radius: 2px;
        }
        
        .msg-sender { font-size: 0.75rem; color: #6b7280; margin-bottom: 4px; display: block; }
        
        .input-area {
            padding: 15px; background: #fff; border-top: 1px solid #e5e7eb;
        }
        .form-control:focus { box-shadow: none; border-color: #d1d5db; }
    </style>
</head>
<body>

    <div class="chat-header">
        <div class="d-flex align-items-center gap-3">
            <a href="/dashboard" class="text-dark"><i class="bi bi-arrow-left fs-4"></i></a>
            <div>
                <h5 class="mb-0 fw-bold"><%= withUser %></h5>
                <small class="text-success"><i class="bi bi-circle-fill" style="font-size: 8px;"></i> Online</small>
            </div>
        </div>
        <a href="/dashboard" class="btn btn-outline-secondary btn-sm">Close Chat</a>
    </div>

    <div class="chat-container">
        <div id="chat-box" class="messages-area">
            </div>
        
        <div class="input-area">
            <form id="chat-form" class="d-flex gap-2">
                <input type="text" id="msg-input" class="form-control rounded-pill bg-light border-0 px-4" placeholder="Type a message..." required autocomplete="off">
                <button type="submit" class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; background: #764ba2; border:none;">
                    <i class="bi bi-send-fill"></i>
                </button>
            </form>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const room = "<%= room %>";
        const currentUser = "<%= currentUser %>";

        socket.emit('join_room', { room: room });

        socket.on('load_history', (history) => {
            const box = document.getElementById('chat-box');
            box.innerHTML = '';
            history.forEach(msg => appendMessage(msg));
            scrollToBottom();
        });

        socket.on('receive_message', (msg) => {
            appendMessage(msg);
            scrollToBottom();
        });

        document.getElementById('chat-form').addEventListener('submit', (e) => {
            e.preventDefault();
            const input = document.getElementById('msg-input');
            const message = input.value;
            if(!message.trim()) return;
            
            socket.emit('chat_message', { room, sender: currentUser, message });
            input.value = '';
        });

        function appendMessage(msg) {
            const box = document.getElementById('chat-box');
            const div = document.createElement('div');
            const isMe = msg.sender === currentUser;
            
            div.className = 'message-bubble ' + (isMe ? 'msg-me' : 'msg-them');
            div.innerHTML = `
                ${!isMe ? `<span class="msg-sender">${msg.sender}</span>` : ''}
                ${msg.message}
            `;
            box.appendChild(div);
        }
        
        function scrollToBottom() {
            const box = document.getElementById('chat-box');
            box.scrollTop = box.scrollHeight;
        }
    </script>
</body>
</html>